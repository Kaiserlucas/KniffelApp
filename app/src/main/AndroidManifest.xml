<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kniffel">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GUI.activities.HostLoadedGameActivity"></activity>
        <activity android:name=".GUI.activities.SaveGameActivity" />
        <activity android:name=".GUI.activities.DeleteGameActivity" />
        <activity
            android:name=".GUI.activities.ResultsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GUI.activities.IngameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GUI.activities.ScoreTableActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GUI.activities.JoinGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GUI.activities.LoadGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GUI.activities.HostGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GUI.activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>